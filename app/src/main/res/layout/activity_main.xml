<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/pagebkg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:textColor="@color/grey"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="@color/grey"
        android:layout_below="@id/editTextEmailLogin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:layout_below="@id/editTextPassLogin"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewRespuestaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnIniciarSesion"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/registroRedirectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes una cuenta? Regístrate aquí"
        android:layout_below="@id/textViewRespuestaLogin"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/rememberCredentialsCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordar credenciales"
        android:layout_below="@id/registroRedirectText"
        android:layout_marginTop="16dp"/>



</RelativeLayout>
